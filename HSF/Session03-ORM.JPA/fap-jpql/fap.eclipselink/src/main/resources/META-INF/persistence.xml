<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="com.giaolang.superapp-PU" transaction-type="RESOURCE_LOCAL">
        <!-- Khai báo các entity class để map xuống table -->
        <!--        <class>com.giaolang.superpapp.entity.Student</class>-->

        <!-- Cấu hình kết nối CSDL -->
        <properties>
            <!-- JDBC Driver dùng MS SQL Server -->
            <property name="jakarta.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>

            <!-- JDBC URL kết nối tới SQL Server (sửa localhost, tên DB cho đúng với máy của bạn) -->
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:sqlserver://localhost:1433;databaseName=HSF302;encrypt=true;trustServerCertificate=true"/>

            <!-- Tài khoản đăng nhập SQL Server -->
            <property name="jakarta.persistence.jdbc.user" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value="12345"/>

            <!-- Chỉ định Hibernate làm provider nối tới SQLServer -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.SQLServerDialect"/>

            <!-- Tùy chọn thao tác với CSDL:
            "none": Không làm gì cả – không kiểm tra, không tạo, không cập nhật gì cả
            "validate": Kiểm tra bảng có sẵn có khớp với entity không – nếu lệch thì báo lỗi
            "update": Cập nhật schema: tạo thêm bảng/cột nếu thiếu, không xoá gì cả
            "create": Xoá toàn bộ bảng cũ rồi tạo bảng mới từ đầu
            "create-drop": Tạo bảng khi chạy app, xoá toàn bộ bảng khi app dừng
            "drop": (Hiếm dùng) Xoá toàn bộ bảng khi app khởi động – không tạo lại bảng -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Hiển thị SQL khi chạy (tùy chọn) -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
    <persistence-unit name="com.giaolang.superapp.eclipselink-PU" transaction-type="RESOURCE_LOCAL">
        <!-- Chỉ định JPA provider là EclipseLink -->
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

        <!-- Khai báo các entity class để map xuống table -->
        <class>com.giaolang.superapp.entity.Student</class>
        <class>com.giaolang.superapp.entity.Lecturer</class>
        <!-- Cấu hình kết nối CSDL -->
        <properties>
            <!-- JDBC Driver dùng MS SQL Server -->
            <property name="jakarta.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>

            <!-- JDBC URL kết nối tới SQL Server (sửa localhost, tên DB cho đúng với máy của bạn) -->
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:sqlserver://localhost:1433;databaseName=HSF302_EclipseLink;encrypt=true;trustServerCertificate=true"/>

            <!-- Tài khoản đăng nhập SQL Server -->
            <property name="jakarta.persistence.jdbc.user" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value="12345"/>

            <!-- Chỉ định EclipseLink làm provider nối tới SQLServer -->
            <property name="eclipselink.target-database" value="SQLServer"/>

            <!-- Tùy chọn thao tác với CSDL: "create-tables": Tạo bảng nếu chưa có. Không xóa bảng cũ hoặc dữ liệu -->
            <!-- "drop-and-create-tables": Xóa hết toàn bộ bảng cũ rồi tạo lại bảng mới; "none":  Không làm gì cả (mặc định nếu không khai báo) -->
            <property name="eclipselink.ddl-generation" value="create-tables"/>

            <!-- Chọn output thực thi trực tiếp trên CSDL thay vì ra DDL/DB script -->
            <property name="eclipselink.ddl-generation.output-mode" value="database"/>

            <!-- Cho phép log SQL ra console để dễ debug -->
            <property name="eclipselink.logging.level" value="FINE"/>

        </properties>
    </persistence-unit>
</persistence>

