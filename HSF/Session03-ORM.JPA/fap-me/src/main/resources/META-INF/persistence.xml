<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="com.tusry.superapp-PU" transaction-type="RESOURCE_LOCAL">
        <!-- Khai báo các entity class để map xuống table -->
        <!--        <class>com.giaolang.studentapp.entity.Student</class>-->

        <!-- Cấu hình kết nối CSDL -->
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
            <!-- Ví dụ URL kết nối. Hãy thay đổi tên máy chủ, cổng và tên DB của bạn -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:sqlserver://localhost:1433;databaseName=HSF302;encrypt=true;trustServerCertificate=true"/>
            <property name="jakarta.persistence.jdbc.user" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value="12345"/>

            <!-- Cấu hình Hibernate làm provider -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.SQLServerDialect"/>

            <!-- Tùy chọn: tự động tạo/bổ sung bảng: create, update. Chỉ dùng trong dev, không dùng ở production -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Hiển thị SQL khi chạy (tùy chọn) -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>

